<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Parallel Suite" parallel="tests" thread-count="4">
    <test name="UI Tests" group-by-instances="true">
        <groups>
            <run>
                <include name="ui"/>
            </run>
        </groups>
        <classes>
            <class name="ui.tests.LoginTest"/>
            <class name="ui.tests.CreateProjectWithNonValidInput"/>
            <class name="ui.tests.CreateProjectWithValidInput"/>
            <class name="ui.tests.VerifyProjectCanBeDeleted"/>
        </classes>
    </test>

    <test name="API Tests" group-by-instances="true">
        <groups>
            <run>
                <include name="api"/>
            </run>
        </groups>
        <classes>
            <class name="api.tests.GetUserTest"/>
            <class name="api.tests.CreateProjectWithNonValidInputTest"/>
            <class name="api.tests.CreateProjectWithValidInputTest"/>
            <class name="api.tests.DeleteProjectTest"/>
        </classes>
    </test>
</suite>
